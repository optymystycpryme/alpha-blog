<%= render  "shared/errors", obj: @user %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-sm-5 col-xs-7">
        <%= react_component('Colorpicker', { color: prefered_color, selector: 'user_color' }) %>
      </div>
      <div class="col-lg-8 col-sm-7 col-xs-5">
        <%= f.text_field :color, class: "form-control", placeholder: "Enter a color for your page background..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary btn-lg btn-block") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
