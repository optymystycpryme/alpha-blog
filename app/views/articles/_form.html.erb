<%= render  "shared/errors", obj: @article %>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article..." %>
      </div>
    </div>
    <div class="form-group" align="center">
      <div class="row">
        <div class="col-sm-12">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: 'checkbox-inline input-checkbox') { cb.check_box(class: 'checkbox') + cb.text } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
    <% end %>
    <div align="center"">
      [ <%= link_to  "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
