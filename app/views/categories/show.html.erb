<div class="article-index">
  <div align="center" class="category-show-header">
    <h1 align="center"><%= "Category: " + @category.name %></h1>
    <% if logged_in? && current_user.admin? %>
      <span class="edit-category"><%= link_to  "Edit category name", edit_category_path(@category) %></span>
    <% end %>
  </div>
  <%= render  "articles/article", obj: @category_articles %>
  <div align="center">
    <%= will_paginate @category_articles %>
  </div>
</div>